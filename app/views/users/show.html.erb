<h1><%= @user.username %></h1>
<p>ユーザーページです。</p>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<div>
  <%= render 'follow_form' if user_signed_in? %>
  <% if @user.posts.any? %>
  <h3>Post (<%= @user.posts.count %>)</h3>
  <ol class="posts">
    <%= render @posts %>
  </ol>
  <%= will_paginate @posts %>
  <% end %>
</div>
